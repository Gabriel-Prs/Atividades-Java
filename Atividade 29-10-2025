//6. Pe√ßa o valor em reais e a cota√ß√£o do d√≥lar e exiba o valor convertido.

import java.util.Scanner;
import java.text.DecimalFormat;

public class Conversao{
	public static void main(String[] args) {
	    Scanner scan = new Scanner (System.in);
	    DecimalFormat df = new DecimalFormat("0.00");
	    
		System.out.println("Digite o valor.");
		double valorReal = scan.nextDouble();
		
		System.out.println("Valor real do dolar.");
		double valorDol = scan.nextDouble();
		
		double convers√£o = valorReal/valorDol;
		
		System.out.println("\nüí± Convers√£o Real ‚Üí D√≥lar üí±");
        System.out.println("Valor em Reais: R$ " + df.format(valorReal));
        System.out.println("Cota√ß√£o do D√≥lar: R$ " + df.format(valorDol));
        System.out.println("Valor em D√≥lares: US$ " + df.format(convers√£o));

		scan.close();
	}
}

//7. Leia a base e a altura de um ret√¢ngulo e calcule sua √°rea.

import java.util.Scanner;
import java.text.DecimalFormat;

public class triangulo{
	public static void main(String[] args) {
	    Scanner scan = new Scanner (System.in);
	    //DecimalFormat df = new DecimalFormat("0.00");
	    
		System.out.println("Digite o valor da base.");
		int base = scan.nextInt();
		
		System.out.println("Digite o valor da altura.");
		int haltura = scan.nextInt();
		
		int areaTri = (base*haltura);
		
		System.out.println("Calculo da √°rea do trinagulo üí±");
        System.out.println("Seu valor √© " + areaTri);

		scan.close();
	}
}

//8. Leia um valor em minutos e converta para horas e minutos.

import java.util.Scanner;
import java.text.DecimalFormat;

public class minutagem{
	public static void main(String[] args) {
	    Scanner scan = new Scanner (System.in);
	    //DecimalFormat df = new DecimalFormat("0.00");
	    
		System.out.println("Quantos minutos?");
		double min = scan.nextDouble();
		
		double hora = min/60;
		double seg = min*60;
		
		System.out.println("Cornvers√£o de minutos.");
        System.out.println("Segundos "+ seg);
        System.out.println("Minutos "+ min);
        System.out.println("Hora "+ hora);

		scan.close();
	}
}
